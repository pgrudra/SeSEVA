<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="UsageOverViewViewModel"
            type="com.spandverse.seseva.home.usagestats.UsageOverViewViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usage_stats_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        tools:context=".home.usagestats.UsageOverviewFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/subtitle_1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/common_background"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:title="App level stats"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:titleTextColor="@color/disabled_text" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/seseva_icon_foreground" />

                <TextView
                    android:id="@+id/textView32"
                    style="@style/subtitle_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{UsageOverViewViewModel.appNameForAppScreen}"
                    android:textColor="@color/primary_text"
                    app:layout_constraintBottom_toBottomOf="@+id/app_icon"
                    app:layout_constraintStart_toEndOf="@+id/app_icon"
                    app:layout_constraintTop_toTopOf="@+id/app_icon"
                    tools:text="SeSeva" />

                <TextView
                    android:id="@+id/today_s_statistics"
                    style="@style/subtitle_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{UsageOverViewViewModel.screenHeading}"
                    android:textColor="@color/primary_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/whitelisted_description"
                    tools:text="Today's statistics" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/app_launches"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/today_s_statistics">

                    <TextView
                        android:id="@+id/total_time_spent_text"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Screen time"
                        android:textColor="@color/disabled_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/total_time" />

                    <TextView
                        android:id="@+id/total_time"
                        style="@style/subtitle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{UsageOverViewViewModel.appTimeSpent}"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="4 hrs 10 mins" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/app_launches"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/time"
                    app:layout_constraintTop_toBottomOf="@id/today_s_statistics">

                    <TextView
                        android:id="@+id/total_app_launches_text"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="App launches"
                        android:textColor="@color/disabled_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/total_app_launches" />

                    <TextView
                        android:id="@+id/total_app_launches"
                        style="@style/subtitle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{UsageOverViewViewModel.appLaunches}"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="23" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/app_icon"
                    android:layout_marginTop="8dp"
                    style="@style/caption"
                    android:textColor="@color/primary_text"
                    android:text="This app is classified under whitelisted category. You can use these apps as per your need"
                    android:id="@+id/whitelisted_description"
                    android:visibility="gone"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/heads_up_c_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/time"
    android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heads_up_text"
                    tools:text="Head's up!!"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/subtitle_1"
                    app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sub_heads_up_text1"
        style="@style/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heads_up_text"
        tools:text="This app is classified under Communitation category" />

    <TextView
                    android:id="@+id/sub_heads_up_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sub_heads_up_text1"
                    tools:text="you will break a SeSEVA rule it you break the following limit"
                    style="@style/caption"
                    android:textColor="@color/primary_text"/>
                <TextView
                    android:layout_width="126dp"
                    android:layout_height="52dp"
                    tools:text="04:00"
                    android:id="@+id/time_countdown"
                    android:gravity="center"
                    android:fontFamily="@font/share_tech_mono"
                    android:textSize="24sp"
                    android:text="@{UsageOverViewViewModel.exceededTime}"
                    android:background="@drawable/ic_countdown_red"
                    app:layout_constraintTop_toBottomOf="@id/sub_heads_up_text2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="18dp"
                    android:elevation="4dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:layout_width="126dp"
                    android:layout_height="52dp"
                    tools:text="45"
                    android:text="@{UsageOverViewViewModel.exceededLaunches}"
                    android:background="@drawable/ic_counts_countdown_red"
                    android:gravity="center"
                    android:id="@+id/launches_countdown"
                    android:fontFamily="@font/share_tech_mono"
                    android:textSize="24sp"
                    app:layout_constraintTop_toBottomOf="@id/sub_heads_up_text2"
                    app:layout_constraintStart_toEndOf="@id/time_countdown"
                    android:layout_marginTop="18dp"
                    android:elevation="4dp"
                    android:layout_marginStart="32dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Exceeded time"
                    android:text="@{UsageOverViewViewModel.exceededTimeText}"
                    style="@style/caption"
                    android:id="@+id/exceded_time_text"
                    android:textColor="@color/disabled_text"
                    app:layout_constraintTop_toBottomOf="@id/time_countdown"
                    app:layout_constraintStart_toStartOf="@id/time_countdown"
                    app:layout_constraintEnd_toEndOf="@id/time_countdown"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Exceeded launches"
                    android:text="@{UsageOverViewViewModel.exceededLaunchesText}"
                    style="@style/caption"
                    android:id="@+id/exceded_app_lanches_text"
                    android:textColor="@color/disabled_text"
                    app:layout_constraintTop_toBottomOf="@id/launches_countdown"
                    app:layout_constraintStart_toStartOf="@id/launches_countdown"
                    app:layout_constraintEnd_toEndOf="@id/launches_countdown"
                    android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/heads_up_c_l"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/comparative_ana_text"
                        style="@style/subtitle_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/all_corner_rounded_4dp_common"
                        android:padding="8dp"
                        android:text="Comparative analysis"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/this_year_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/all_corner_rounded_4dp_2e"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Past year"
                        android:textColor="@color/secondary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/this_month_button"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />

                    <Button
                        android:id="@+id/this_week_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/primary_60p_rounded_corner_4"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Past week"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toStartOf="@+id/this_month_button"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />

                    <Button
                        android:id="@+id/this_month_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/all_corner_rounded_4dp_2e"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Past month"
                        android:textColor="@color/secondary_text"
                        app:layout_constraintEnd_toStartOf="@+id/this_year_button"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/this_week_button"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/week_charts_constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/this_week_button">

                        <TextView
                            android:id="@+id/graph_time_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/screen_time"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/time_spent_bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="2dp"
                            app:layout_constraintTop_toBottomOf="@id/graph_time_text" />

                        <TextView
                            android:id="@+id/graph_app_launches_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/app_launches"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toBottomOf="@+id/time_spent_bar_chart"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/app_launches_bar_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toTopOf="@id/time_spent_week_aggregate_constraint_layout"
                            app:layout_constraintTop_toBottomOf="@+id/graph_app_launches_text" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/time_spent_week_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/app_launches_week_aggregate_constraint_layout"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/time_spent_week_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total screen time"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/time_spent_week_aggregate"
                                app:layout_constraintStart_toStartOf="@id/time_spent_week_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/time_spent_week_aggregate" />

                            <TextView
                                android:id="@+id/time_spent_week_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2 hrs 30 mins" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/app_launches_week_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/time_spent_week_aggregate_constraint_layout">

                            <TextView
                                android:id="@+id/app_launches_week_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total app launches"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/app_launches_week_aggregate"
                                app:layout_constraintStart_toStartOf="@id/app_launches_week_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/app_launches_week_aggregate" />

                            <TextView
                                android:id="@+id/app_launches_week_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="998" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/month_charts_constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/this_week_button">

                        <TextView
                            android:id="@+id/graph_time_month_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/screen_time"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/time_spent_month_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            app:layout_constraintTop_toBottomOf="@id/graph_time_month_text" />

                        <TextView
                            android:id="@+id/graph_app_launches_month_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/app_launches"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toBottomOf="@+id/time_spent_month_line_chart"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/app_launches_month_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toTopOf="@id/time_spent_month_aggregate_constraint_layout"
                            app:layout_constraintTop_toBottomOf="@+id/graph_app_launches_month_text" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/time_spent_month_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/app_launches_month_aggregate_constraint_layout"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/time_spent_month_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total screen time"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/time_spent_month_aggregate"
                                app:layout_constraintStart_toStartOf="@id/time_spent_month_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/time_spent_month_aggregate" />

                            <TextView
                                android:id="@+id/time_spent_month_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2 hrs 30 mins" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/app_launches_month_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/time_spent_month_aggregate_constraint_layout">

                            <TextView
                                android:id="@+id/app_launches_month_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total app launches"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/app_launches_month_aggregate"
                                app:layout_constraintStart_toStartOf="@id/app_launches_month_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/app_launches_month_aggregate" />

                            <TextView
                                android:id="@+id/app_launches_month_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="998" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/year_charts_constraint_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/this_week_button">

                        <TextView
                            android:id="@+id/graph_time_year_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/screen_time"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/time_spent_year_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            app:layout_constraintTop_toBottomOf="@id/graph_time_year_text" />

                        <TextView
                            android:id="@+id/graph_app_launches_year_text"
                            style="@style/body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:text="@string/app_launches"
                            android:textColor="@color/primary_text"
                            app:layout_constraintTop_toBottomOf="@+id/time_spent_year_line_chart"
                            tools:layout_editor_absoluteX="0dp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/app_launches_year_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="198dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toTopOf="@id/time_spent_year_aggregate_constraint_layout"
                            app:layout_constraintTop_toBottomOf="@+id/graph_app_launches_year_text" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/time_spent_year_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/app_launches_year_aggregate_constraint_layout"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/time_spent_year_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Total screen time"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/time_spent_year_aggregate"
                                app:layout_constraintStart_toStartOf="@id/time_spent_year_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/time_spent_year_aggregate" />

                            <TextView
                                android:id="@+id/time_spent_year_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2 hrs 30 mins" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/app_launches_year_aggregate_constraint_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/all_corner_rounded_4dp_common"
                            android:padding="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/time_spent_year_aggregate_constraint_layout">

                            <TextView
                                android:id="@+id/app_launches_year_aggregate_text"
                                style="@style/caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Total app launches"
                                android:textColor="@color/disabled_text"
                                app:layout_constraintEnd_toEndOf="@+id/app_launches_year_aggregate"
                                app:layout_constraintStart_toStartOf="@id/app_launches_year_aggregate"
                                app:layout_constraintTop_toBottomOf="@id/app_launches_year_aggregate" />

                            <TextView
                                android:id="@+id/app_launches_year_aggregate"
                                style="@style/subtitle_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="998" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/no_charts_text"
                        style="@style/body_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="16dp"
                        android:text="It appears that you are either new or you have deleted the stats!!\nYou can view newly collected stats by tomorrow"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/this_week_button"
                        tools:layout_editor_absoluteX="24dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>