<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="UsageOverViewViewModel"
            type="com.example.us0.home.usagestats.UsageOverViewViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usage_stats_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        tools:context=".home.usagestats.UsageOverviewFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/subtitle_1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/common_background"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:titleTextColor="@color/primary_text" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="@+id/category_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView32"
                    tools:src="@drawable/ic_sponsor_logo" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@{UsageOverViewViewModel.appNameForAppScreen}"
                    android:textColor="@color/primary_text"
                    app:layout_constraintStart_toEndOf="@+id/app_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="SeSeva" />

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Category: "
                    android:textColor="@color/primary_text"
                    app:layout_constraintStart_toStartOf="@+id/textView32"
                    app:layout_constraintTop_toBottomOf="@+id/textView32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{UsageOverViewViewModel.catNameForAppScreen}"
                    android:textColor="@color/primary_text"
                    app:layout_constraintBottom_toBottomOf="@+id/category_text"
                    app:layout_constraintStart_toEndOf="@+id/category_text"
                    app:layout_constraintTop_toTopOf="@+id/category_text"
                    tools:text="OTHERS" />
                <TextView
                    android:id="@+id/today_s_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Today's statistics"
                    android:text="@{UsageOverViewViewModel.screenHeading}"
                    android:textColor="@color/secondary_text"
                    style="@style/subtitle_1"
                    app:layout_constraintTop_toBottomOf="@id/category_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="24dp"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/app_launches"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/today_s_statistics">

                    <TextView
                        android:id="@+id/total_time_spent_text"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Total time spent"
                        android:textColor="@color/disabled_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/total_time" />

                    <TextView
                        android:id="@+id/total_time"
                        style="@style/subtitle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{UsageOverViewViewModel.appTimeSpent}"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="4 hrs 10 mins" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/app_launches"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/time"
                    app:layout_constraintTop_toBottomOf="@id/today_s_statistics">

                    <TextView
                        android:id="@+id/total_app_launches_text"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Total app launches"
                        android:textColor="@color/disabled_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/total_app_launches" />

                    <TextView
                        android:id="@+id/total_app_launches"
                        style="@style/subtitle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{UsageOverViewViewModel.appLaunches}"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="23" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/all_corner_rounded_4dp_1e"
                    app:layout_constraintTop_toBottomOf="@id/time"
                    tools:layout_editor_absoluteX="16dp">

                    <TextView
                        android:id="@+id/comparative_ana_text"
                        style="@style/subtitle_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/all_corner_rounded_4dp_common"
                        android:text="Comparative analysis"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/this_year_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/all_corner_rounded_4dp_2e"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="This year"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/this_month_button"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />

                    <Button
                        android:id="@+id/this_week_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/primary_60p_rounded_corner_4"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="This week"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toStartOf="@+id/this_month_button"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />

                    <Button
                        android:id="@+id/this_month_button"
                        style="@style/caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/all_corner_rounded_4dp_2e"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="This month"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/primary_text"
                        app:layout_constraintEnd_toStartOf="@+id/this_year_button"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/this_week_button"
                        app:layout_constraintTop_toBottomOf="@id/comparative_ana_text" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/graph_time_text"
                        style="@style/body_2"
                        android:gravity="center"
                        tools:text="Total screentime this week"
                        android:textColor="@color/secondary_text"
                        app:layout_constraintTop_toBottomOf="@id/this_week_button"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>