<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="LoginViewModel"
        type="com.example.us0.ui.login.LoginViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    tools:context=".ui.login.LinkVerificationFragment">

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_used"
        android:gravity="center_vertical"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="5sp"
        android:text="@string/link_verification_title"
        android:textColor="#DEFFFFFF"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.04"
        android:lineHeight="20sp"
        android:textAlignment="center"
        android:lineSpacingExtra="3sp"
        android:text="@string/link_verification_message"
        android:textColor="#99FFFFFF"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headline" />

    <Button
        android:id="@+id/change_email"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:text="CHANGE EMAIL"
        android:fontFamily="@font/montserrat_used"
        android:textSize="14sp"
        android:lineSpacingExtra="3sp"
        android:letterSpacing="0.06"
        android:lineHeight="20sp"
        android:textColor="#03DAC5"
        android:background="@drawable/login_change_email"
        android:onClick="@{()->LoginViewModel.changeEmail()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resend"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="26dp"
        android:onClick="@{()->LoginViewModel.resend()}"
        android:text="RESEND"
        android:enabled="false"
        android:fontFamily="@font/montserrat_used"
        android:textSize="14sp"
        android:lineSpacingExtra="3sp"
        android:letterSpacing="0.06"
        android:lineHeight="20sp"
        android:background="@drawable/login_resend_inactive"
        app:layout_constraintBottom_toTopOf="@+id/change_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@{LoginViewModel.currentTimeString}"
        android:textColor="#99FFFFFF"
        android:lineHeight="16sp"
        android:gravity="right|center_vertical"
        android:lineSpacingExtra="1sp"
        android:letterSpacing="0.03"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_used"
        app:layout_constraintBottom_toTopOf="@+id/resend"
        app:layout_constraintStart_toStartOf="@+id/resend"
        tools:text="0:00"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>