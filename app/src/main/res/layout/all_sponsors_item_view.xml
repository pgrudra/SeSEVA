<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="sponsor"
            type="com.example.us0.data.SponsorCardContents" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:elevation="3dp"
    android:background="@drawable/all_corner_rounded_4dp_1e">

    <ImageView
        android:id="@+id/sponsor_logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_sponsor_logo" />

    <TextView
        android:id="@+id/sponsor_name"
        style="@style/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondary"
        app:layout_constraintStart_toEndOf="@id/sponsor_logo"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Corporate Company Pvt Ltd" />
    <TextView
        android:id="@+id/sponsored_money_and_missions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/sponsor_logo"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sponsor_name"
        android:layout_marginTop="8dp"
        style="@style/caption"
        android:textColor="@color/secondary_text"
        tools:text="sdfdgbdfbfdnbgbfg"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>