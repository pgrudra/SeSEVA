<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="FeatsViewModel"
            type="com.example.us0.home.feats.FeatsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/subtitle_1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/common_background"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:title="Feats"
            app:titleTextColor="@color/primary_text" />

        <Button
            android:id="@+id/your_missions_button"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/all_corner_rounded_16dp_primary"
            android:onClick="@{}"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Your missions"
            android:textAllCaps="false"
            android:layout_marginEnd="5dp"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toStartOf="@+id/other_missions_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <Button
            android:id="@+id/other_missions_button"
            style="@style/caption"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/all_corner_rounded_16dp_disabled"
            android:onClick="@{}"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="5dp"
            android:text="Other missions"
            android:textAllCaps="false"
            android:textColor="@color/secondary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/your_missions_button"
            app:layout_constraintTop_toTopOf="@id/your_missions_button" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/missions_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:layout_marginTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_missions_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>