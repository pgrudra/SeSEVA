<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"
    android:background="#383838"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Are you sure?"
        android:layout_marginTop="8dp"
        style="@style/subtitle_1"
        android:textColor="@color/primary_text"/>
    <TextView
        android:id="@+id/body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        style="@style/body_2"
        android:layout_marginTop="16dp"
        android:textColor="@color/secondary_text"
        tools:text="Usage access permission is required for the core functionality of SeSeva, hence you can't proceed without giving this permission"/>
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        style="@style/button"
        android:textColor="@color/secondary_text"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel"
        app:layout_constraintTop_toBottomOf="@id/body_text"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="@color/colorPrimary"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@null"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>