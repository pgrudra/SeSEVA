<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/nav_color</item>
        <item name="android:statusBarColor">@color/nav_color</item>
    </style>

    <style name="hi_there_i_">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="sign_in">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="google_custom_sign_in">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="email_input_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_used</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">#DEFFFFFF</item>
    </style>

    <style name="or">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="disabled_text">
        <item name="android:textColor">#61FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/nav_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomImageCardViewStyle" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">70dp</item>
        <item name="cornerSizeBottomRight">70dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

<style name="text_stroke">
    <item name="strokeWidth">1dp</item>
    <item name="strokeColor">#121212</item>
</style>

</resources>